<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reg_page">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:text="Email-id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325"
        tools:layout_editor_absoluteY="147dp"
        android:layout_alignBaseline="@+id/ed2"
        android:layout_alignBottom="@+id/ed2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="87dp"
        android:layout_height="24dp"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17"
        android:layout_alignBaseline="@+id/ed1"
        android:layout_alignBottom="@+id/ed1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:text="password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/ed3"
        android:layout_alignBottom="@+id/ed3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="363dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/ed2" />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ed2"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/textView2"
        android:ems="10"
        android:hint="your name here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="83dp" />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ed3"
        android:layout_alignStart="@+id/ed1"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="11dp"
        android:ems="10"
        android:hint="eg. 123@gmail.com"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="156dp" />

    <EditText
        android:id="@+id/ed3"
        android:layout_width="211dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/ed2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="185dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ed1"
        android:layout_alignStart="@+id/ed1"
        android:layout_marginBottom="54dp"
        android:text="Enter your details here" />

</RelativeLayout>

